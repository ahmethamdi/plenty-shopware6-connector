<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="api.action.plenty.cache_clear" path="/api/_action/plenty/cache-clear" methods="POST">
        <default key="_controller">PlentyConnector\Controller\AdminUtilityController::clearCache</default>
    </route>

    <route id="api.action.plenty.sync_products" path="/api/_action/plenty/sync-products" methods="POST">
        <default key="_controller">PlentyConnector\Controller\AdminUtilityController::syncProducts</default>
    </route>

    <route id="api.action.plenty.test_connection" path="/api/_action/plenty/test-connection" methods="POST">
        <default key="_controller">PlentyConnector\Controller\AdminUtilityController::testConnection</default>
    </route>

    <route id="api.action.plenty.sync_products_with_count" path="/api/_action/plenty/sync-products-with-count" methods="POST">
        <default key="_controller">PlentyConnector\Controller\AdminUtilityController::syncProductsWithCount</default>
    </route>
</routes>
