<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="PlentyConnector\Service\PlentyApiService">
            <argument type="service" id="http_client"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="PlentyConnector\Service\ProductSyncService">
            <argument type="service" id="PlentyConnector\Service\PlentyApiService"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="Shopware\Core\Content\Media\MediaService"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="PlentyConnector\Service\OrderSyncService">
            <argument type="service" id="PlentyConnector\Service\PlentyApiService"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="PlentyConnector\EventListener\OrderPlacedListener">
            <argument type="service" id="PlentyConnector\Service\OrderSyncService"/>
            <tag name="kernel.event_listener" event="checkout.order.placed" method="onOrderPlaced"/>
        </service>

        <service id="PlentyConnector\Command\SyncProductsCommand">
            <argument type="service" id="PlentyConnector\Service\ProductSyncService"/>
            <tag name="console.command"/>
        </service>

        <service id="PlentyConnector\Command\CleanPlentyProductsCommand">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="logger"/>
            <tag name="console.command"/>
        </service>

        <service id="PlentyConnector\Controller\AdminUtilityController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Adapter\Cache\CacheClearer"/>
            <argument type="service" id="PlentyConnector\Service\ProductSyncService"/>
        </service>

        <!-- Token System Entity Definitions -->
        <service id="PlentyConnector\Core\Content\Package\PackageDefinition">
            <tag name="shopware.entity.definition" entity="plenty_package"/>
        </service>

        <service id="PlentyConnector\Core\Content\PackageProgress\PackageProgressDefinition">
            <tag name="shopware.entity.definition" entity="plenty_package_progress"/>
        </service>

        <service id="PlentyConnector\Core\Content\TokenTransaction\TokenTransactionDefinition">
            <tag name="shopware.entity.definition" entity="plenty_token_transaction"/>
        </service>

        <service id="PlentyConnector\Core\Content\TokenProduct\TokenProductDefinition">
            <tag name="shopware.entity.definition" entity="plenty_token_product"/>
        </service>

        <service id="PlentyConnector\Core\Content\TokenOrder\TokenOrderDefinition">
            <tag name="shopware.entity.definition" entity="plenty_token_order"/>
        </service>
    </services>
</container>
