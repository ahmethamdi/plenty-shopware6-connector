{% sw_extends '@Storefront/storefront/page/account/index.html.twig' %}

{% block page_account_main_content %}
    <div class="account-packages">
        <h1 class="account-welcome-headline">{{ "account.packagesTitle"|trans }}</h1>

        {# Token Balance #}
        <div class="alert alert-info mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">{{ "account.tokenBalance"|trans }}</h5>
                </div>
                <div class="h3 mb-0 text-primary">
                    <strong>{{ tokenBalance }}</strong> {{ "account.tokens"|trans }}
                </div>
            </div>
        </div>

        {# Package Progress Cards #}
        {% if packages|length > 0 %}
            <div class="row">
                {% for item in packages %}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">{{ item.package.name }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>{{ "account.progress"|trans }}</span>
                                        <span><strong>{{ item.percentage }}%</strong></span>
                                    </div>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated"
                                             role="progressbar"
                                             style="width: {{ item.percentage }}%"
                                             aria-valuenow="{{ item.percentage }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ item.currentAmount|number_format(2, ',', '.') }}€ / {{ item.targetAmount|number_format(2, ',', '.') }}€
                                        </div>
                                    </div>
                                </div>

                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="border rounded p-3">
                                            <div class="text-muted small">{{ "account.tokenReward"|trans }}</div>
                                            <div class="h4 mb-0 text-success">{{ item.package.tokenReward }}</div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="border rounded p-3">
                                            <div class="text-muted small">{{ "account.completedCycles"|trans }}</div>
                                            <div class="h4 mb-0 text-info">{{ item.completedCycles }}</div>
                                        </div>
                                    </div>
                                </div>

                                {% if item.percentage >= 100 %}
                                    <div class="alert alert-success mt-3 mb-0">
                                        <i class="fas fa-check-circle"></i> {{ "account.packageCompleted"|trans }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                {{ "account.noPackages"|trans }}
            </div>
        {% endif %}

        {# Token Market Link #}
        <div class="mt-4 text-center">
            <a href="{{ path('frontend.token.market') }}" class="btn btn-primary btn-lg">
                <i class="fas fa-gift"></i> {{ "account.viewTokenMarket"|trans }}
            </a>
        </div>
    </div>
{% endblock %}
